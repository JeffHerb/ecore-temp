{{#if this.readOnly}}
    <div class="emp-field">
        <div class="cui-label">
            <span class="emp-label">{{this.legend}}</span>
        </div>
        <div class="cui-data">
            {{#if this.yes.input.attributes.checked}}
                {{#if this.yes.label}}
                    <span class="emp-data">{{this.yes.label.text}}</span>
                {{else}}
                    <span class="emp-data">Yes</span>
                {{/if}}
            {{else}}
                {{#if this.no.label}}
                    <span class="emp-data">{{this.no.label.text}}</span>
                {{else}}
                    <span class="emp-data">No</span>
                {{/if}}
            {{/if}}
        </div>
    </div>
{{else}}
    <fieldset {{attribute (mergeAttributes false defaults=(extendDefaults defaults='{"className": "emp-yes-no-component emp-boolean-input-group"}' required=this.required scope="yesNo"))}}>
        <div class="emp-fieldset-contents" role="group" aria-labelledby="{{this.name}}">
	        <div class="cui-label">
	            <legend class="cui-required" id="{{this.name}}">{{this.legend}}</legend>
	        </div>
	        <div class="cui-data">
	            <div class="emp-input-collection">
	                <div class="emp-field cui-data-left">
                        {{#if this.required}}
                            {{> _booleanInput this.yes noWrap=true required=true scope="yesNo"}}
                        {{else}}
	                        {{> _booleanInput this.yes noWrap=true}}
                        {{/if}}
	                    {{#if this.yes.label}}
	                        {{> _label this.yes.label noWrap=true}}
	                    {{else}}
	                        <label for="{{this.yes.input.attributes.id}}">Yes</label>
	                    {{/if}}
	                </div>
	                <div class="emp-field cui-data-left">
                        {{#if this.required}}
                            {{> _booleanInput this.no noWrap=true required=true scope="yesNo"}}
                        {{else}}
                            {{> _booleanInput this.no noWrap=true}}
                        {{/if}}
	                    {{#if this.no.label}}
	                        {{> _label this.no.label noWrap=true}}
	                    {{else}}
	                        <label for="{{this.no.input.attributes.id}}">No</label>
	                    {{/if}}
	                </div>
	            </div>
	            {{#if this.help}}
                    {{~> _itag this.help}}
                {{/if}}
                {{#if this.message~}}
                    {{> _message this.message}}
                {{/if~}}
	        </div>
    	</div>
    </fieldset>
{{/if}}
